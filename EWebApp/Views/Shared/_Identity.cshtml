@inject UserManager<ApplicationUser> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-action="Login" asp-controller="Account">
        <i class="bi bi-box-arrow-in-right"> Log In</i>
    </a>

    <span style="padding: 5px;"></span>

    <a class="btn btn-outline-primary my-2 my-sm-0" asp-action="Register" asp-controller="Account">
        <i class="bi bi-person-plus"> Register</i>
    </a>
}
else
{
    <div class="dropdown">
        <button class="btn btn-outline-success dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-badge"></i>Hello @UserManager.GetUserName(User)
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" asp-action="index" asp-controller="Order">
                    <i class="bi bi-list"></i>Orders
                </a>
            </li>

            @if(User.IsInRole("admin"))
            {
                <li>
                    <a class="dropdown-item" asp-action="Users" asp-controller="Account">
                        <i class="bi bi-people"></i> Users
                    </a>
                </li>
                
            }
        </ul>
    </div>

    <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"> Log Out</i>
        </button>
    </form>
}


